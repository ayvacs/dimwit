{

    "compilerOptions": {
        "target": "es2016",
        "module": "nodenext",
        "rootDir": "./src",
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true
    },

    "include": [
        "src/**/*.js",
        "src/**/*.ts"
    ]
    
}